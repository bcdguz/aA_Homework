<h2>Hello! <%= @user.username %></h2>

<% @user.goals.each do |goal| %>
    <ul>
        <li><%= goal.name %></li>
        <li><%= goal.details %></li>
        <li>
        <%= goal.status ? 'Done' : '' %>
        </li>
    </ul>
    <form action="<%= goal_url %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete Goal">
    </form>
<% end %>


<label>Add a New Goal</label>
<form action="<%= user_goals_url(@user) %>" method="POST">
    <label>Name:
        <input type="text" name="goal[name]">
    </label>

    <label>Details:
        <input type="text" name="goal[details]">
    </label>

    <label>Status:</label>
    <label>true
        <input type="radio" name="goal[status]" value="<%= true %>">
    </label>
    <label>false
        <input type="radio" name="goal[status]" value="<%= false %>">
    </label>

    <input type="submit" value="Create Goal">
</form>