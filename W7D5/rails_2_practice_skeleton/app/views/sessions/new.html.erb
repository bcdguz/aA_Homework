<h2>Sign In</h2>

<form action="/session" method="POST">

    <label>Username:
        <input type="text" name="user[username]" value="<%= @user ? @user.username : "" %>">
    </label>

    <label>Password:
        <input type="password" name="user[password]" value="">
    </label>


    <input type="submit" value="Sign In">
</form>